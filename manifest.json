{
    "name": "NightMode",
    "version": "1.1",
    "description": "Switch seamlessly from dark mode to light mode while viewing web pages",
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["popup.js"]
    }],
    "icons": {
        "18": "images/icon18.png",
        "32": "images/icon32.png",
        "128": "images/icon128.png"
    },
    "action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "scripting",
        "tabs",
        "activeTab"
    ],
    "manifest_version": 3
}